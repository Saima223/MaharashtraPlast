<section id="contact" class="contact-section">
    <div class="container">
        <h2 class="section-title">Get In Touch</h2>
        
        <div class="contact-wrapper">
            <!-- Quick Contact Info -->
            <div class="quick-info">
                <div class="contact-card primary">
                    <i class="fas fa-phone-alt"></i>
                    <h3>Call Us Directly</h3>
                    <a href="tel:+919876543210" class="contact-link">+91 98765 43210</a>
                    <a href="tel:+919876543211" class="contact-link">+91 98765 43211</a>
                </div>

                <div class="contact-card">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>Visit Our Factory</h3>
                    <p>Plot No. 123, MIDC Industrial Area,<br>
                       Vasai East, Palghar - 401208</p>
                    <a href="https://maps.google.com/?q=19.392177,72.837615" 
                       target="_blank" 
                       class="map-btn">
                       <i class="fas fa-location-arrow"></i> Get Directions
                    </a>
                </div>

                <div class="contact-card">
                    <i class="far fa-clock"></i>
                    <h3>Business Hours</h3>
                    <p>Monday - Saturday<br>9:00 AM - 6:00 PM</p>
                    <p class="closed">Sunday: Closed</p>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form-wrapper">
                <form class="contact-form" action="/submit-form" method="POST">
                    <div class="form-row">
                        <div class="form-group">
                            <label>Your Name</label>
                            <input type="text" name="name" required>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" name="phone" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label>Product Interest</label>
                        <select name="subject" required>
                            <option value="">Select a product</option>
                            <option value="Glass Channel">Glass Channel Beading</option>
                            <option value="Window Fitting">Window Fitting</option>
                            <option value="Table Top">Table Top Beading</option>
                            <option value="Custom">Custom Requirements</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Your Message</label>
                        <textarea name="message" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="submit-btn">
                        Send Message <i class="fas fa-paper-plane"></i>
                    </button>
                </form>

                <div class="whatsapp-contact">
                    <span>or</span>
                </div>
                <div class="whatsapp-contact">
                <a href="https://wa.me/919876543210" class="whatsapp-btn">
                    <i class="fab fa-whatsapp"></i> Chat on WhatsApp
                </a>
                </div>
            </div>
        </div>
    </div>
</section>
